@model WardrobeProject.Models.Jewelries

@{
    ViewBag.Title = "Details";
}

<body id="jewelsindexbody">
    <div class="jumbotron" id="jewelsjumbotron">
        <div class="container-fluid">
            <h2 id="jewelsdisplayheader">Jewelry Details</h2>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <div class="thumbnail">
                <div class="caption">
                    <h3 id="displayrow">Jewelry</h3>
                    <dl class="dl-horizontal" id="wardrobeinfo">
                        <dt>
                            @Html.DisplayNameFor(model => model.JName)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.JName)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.JType)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.JType)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.JMetal)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.JMetal)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.JOccasion)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.JOccasion)
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <div class="thumbnail">
                <div class="caption">
                    <img src="@Html.DisplayFor(model => model.JPhoto)" style="width:315px; height:100%;" id="wardrobephotos" />
                </div>
                @Html.ActionLink("Edit", "Edit", new { id = Model.JewelriesID }, new { @class = "btn btn-primary", role = "button" })
                <button type="button">@Html.ActionLink("Back to List", "Index")</button>
            </div>
        </div>
    </div>
</body>
